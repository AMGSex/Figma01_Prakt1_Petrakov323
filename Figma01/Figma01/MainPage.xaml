<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Figma01.MainPage">

    <StackLayout  VerticalOptions="Center">
        <Frame
            VerticalOptions="Center"
           HorizontalOptions="CenterAndExpand"
           CornerRadius="90"
           IsClippedToBounds="True"
           HeightRequest="70"
           WidthRequest="110">
            <Image x:Name="Kartochka"/>
        </Frame>
        
        <Label Margin="120,50,0,0">Логин</Label>
        <Entry Margin="120,0,120,0" />
        
        <Label  Margin="120,30,0,0">Пароль</Label>
        <Entry Margin="120,0,120,0" />
        
        <StackLayout Orientation="Horizontal" Margin="0,20,0,0" HorizontalOptions="Center">
            <Button Text="Вход" x:Name="btnPenis"  Margin="0,0,54,0" WidthRequest ="100"/>
            <Button Text="Зарегаться" x:Name="btnPasenis" Clicked="btnPasenis_Clicked" WidthRequest ="100"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
